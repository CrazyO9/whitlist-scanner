{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",

  "productName": "whitelist-scanner",
  "version": "0.1.0",
  "identifier": "com.whitelist.scanner",

  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },

  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Whitelist Scanner",
        "width": 900,
        "height": 700,
        "resizable": true
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },

  "plugins": {
    "dialog": null,
    "shell": null
  }
}
